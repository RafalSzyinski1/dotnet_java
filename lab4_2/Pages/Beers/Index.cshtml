@model lab4_2.Pages.Beers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Beers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Beer[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beer[0].Alchool)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beer[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beer[0].Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Beer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alchool)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
        </tr>
}
    </tbody>
</table>
